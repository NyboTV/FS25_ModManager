    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/yauzl": "^2.10.3",
    "adm-zip": "^0.5.16",
    "axios": "^1.10.0",
    "cheerio": "^1.1.0",
    "electron-store": "^10.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
