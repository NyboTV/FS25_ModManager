{
  "name": "fs25_modmanager",
  "version": "1.0.0",
  "description": "Ein Mod-Manager f√ºr Farming Simulator",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --config webpack.config.js",
    "dev": "webpack --config webpack.config.js && electron .",
    "dev:powershell": "powershell -Command \"npm run build; npm start\"",
    "package": "electron-builder build --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "farming simulator",
    "mod manager",
    "fs25"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.fs25modmanager.app",
    "productName": "Farming Simulator Mod Manager",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "src/image/logo.png"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "src/image/**/*"
    ]
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^24.0.3",
